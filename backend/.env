# .env

# Environment: 'local' for dev, 'prod' for production
ENV=local

# Local MCP server URL (change if needed)
MCP_LOCAL_URL=http://localhost:8001

# Production MCP URL (leave empty until you have one)
MCP_PROD_URL=

# API key for your LLM service (e.g., OpenAI)
LLM_API_KEY=your-llm-api-key-here

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
